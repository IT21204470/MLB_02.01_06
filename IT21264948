string Email;

public:
CustomerServiceRepresentative();
CustomerServiceRepresentative(int CSRID, string Name, string Email);
void StoreCSRDetails();
void DisplayCSRDetails();
void ResolveCustomerComplaints();
~CustomerServiceRepresentative();
};

